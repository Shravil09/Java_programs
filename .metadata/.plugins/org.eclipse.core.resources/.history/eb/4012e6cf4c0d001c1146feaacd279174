
public class FactorialByRecursion {
	static int fact=1;
	public static void main(String[] args) {
		int t=10;
		FactorialByRecursion obj = new FactorialByRecursion();
		obj.calFact(t);
		System.out.println("Factorial of "+ t +" is "+fact);
	}
	void calFact(int t)
	{
		if(t>=1) {
		fact=fact*t;
		calFact(t-1);
		
	}

}
	}
